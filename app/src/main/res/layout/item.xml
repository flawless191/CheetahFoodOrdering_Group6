<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="#D1DBE4"
    app:cardCornerRadius="6dp">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="165dp"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="163dp"
        android:layout_height="186dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_33" />

    <TextView
        android:id="@+id/text_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="35.000 VND"
        android:textColor="@color/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_item_name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_itemCard"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageView42"
        app:layout_constraintTop_toTopOf="@+id/imageView42"
        tools:ignore="MissingConstraints">

      <ImageView
          android:id="@+id/image_item"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/pngtree_hamburger_png_image_5966599_1"
          tools:ignore="MissingConstraints" />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/img_add_to_cart"
        android:layout_width="21dp"
        android:layout_height="22dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="@+id/img_favorite"
        app:layout_constraintTop_toBottomOf="@+id/img_favorite"
        app:srcCompat="@drawable/material_symbols_add_circle" />

    <TextView
        android:id="@+id/text_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Cheese Burrger"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_itemCard" />

    <ImageView
        android:id="@+id/img_favorite"
        android:layout_width="32dp"
        android:layout_height="21dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_itemCard"
        app:srcCompat="@drawable/mdi_cards_heart" />

  </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>